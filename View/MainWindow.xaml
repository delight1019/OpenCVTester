<Window x:Class="OpenCVTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:OpenCVTester.ViewModel"
        xmlns:converter="clr-namespace:OpenCVTester.Converter"      
        xmlns:userControls="clr-namespace:OpenCVTester.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <converter:ImageConverter x:Key="ImageConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style\DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <DockPanel>
                <Menu Style="{StaticResource MenuStyle}">
                    <MenuItem Header="File" Style="{StaticResource MenuItemStyle}">
                        <MenuItem Header="Load Image1" Command="{Binding LoadImageCommand}" CommandParameter="{Binding LeftImageViewModel}" />
                        <MenuItem Header="Load Image2" Command="{Binding LoadImageCommand}" CommandParameter="{Binding RightImageViewModel}"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <userControls:ImagePanel>
                        <userControls:ImagePanel.DataContext>
                            <Binding Path="LeftImageViewModel" />
                        </userControls:ImagePanel.DataContext>
                    </userControls:ImagePanel>
                    <!--<Image>
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource ImageConverter}" Mode="OneWay">
                                <Binding Path="LeftImageSource" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>-->
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <userControls:ImagePanel>
                        <userControls:ImagePanel.DataContext>
                            <Binding Path="RightImageViewModel" />
                        </userControls:ImagePanel.DataContext>
                    </userControls:ImagePanel>
                        
                    <!--<Image>
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource ImageConverter}" Mode="OneWay">
                                <Binding Path="RightImageSource" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>-->
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <userControls:ControllerPanel></userControls:ControllerPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
    