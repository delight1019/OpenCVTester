<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OpenCVTester.View.Style">

    <Color x:Key="DefaultColor">#D6E0F0</Color>
    <Color x:Key="DarkColor">#8D93AB</Color>
    <Color x:Key="LightColor">#F1F3F8</Color>
    <Color x:Key="DarkerColor">#393B44</Color>

    <SolidColorBrush x:Key="DefaultColorBrush" Color="{StaticResource DefaultColor}" />
    <SolidColorBrush x:Key="DarkColorBrush" Color="{StaticResource DarkColor}" />
    <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}" />
    <SolidColorBrush x:Key="DarkerColorbrush" Color="{StaticResource DarkerColor}" />

</ResourceDictionary>