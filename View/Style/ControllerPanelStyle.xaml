<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OpenCVTester.View.Style">
    <Style x:Key="ControllerPanelStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{DynamicResource DarkColorBrush}" />
    </Style>

    <Style x:Key="ControllerPanelTabStyle" TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="{DynamicResource DarkColorBrush}" />
    </Style>

    <Style x:Key="PropertyGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style x:Key="PropertyResetButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="50" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Background" Value="{DynamicResource LightColorBrush}" />
    </Style>
    
    <Style x:Key="PropertyTitleStyle" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource LightColorBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>